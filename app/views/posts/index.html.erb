<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        トップページ
      </h1>
    </div>
  </div>
</section>

<div class="hero-body">
  <div class="columns">
    <div class="column is-3">
      <i class="fas fa-crown">投稿数ランキング</i>
    <div class="card">
      <% @users.each do |user| %>
      <div class="user_rank">
        <article class="media">
          <figure class="media-left">
            <p class="image is-64x64">
              <%= attachment_image_tag user, :profile_image, :fill, 200, 200, fallback: "no-image.png" %>
            </p>
          </figure>
          <div class="media-content">
            <div class="content">
              <p>
                <strong><%= user.username %></strong> <small><%= user.email %></small>
                <br>
                投稿数: <%= user.posts.count %>
              </p>
            </div>
            <nav class="level is-mobile">
              </div>
            </nav>
          </div>
          <% end %>
        </article>
      </div>
    </div>
    <div class="column">
      <i class="fas fa-crown posts__like__rank">いいね数ランキング</i>
      <section class="section posts__card">
        <div class="container">
          <div class="columns is-multiline">
            <% @all_ranks.each do |post| %>
              <div class="column is-4">
                <div class="card">
                  <div class="card-image">
                    <figure class="image is-4by3">
                      <%= link_to post_path(post) do %>
                        <%= attachment_image_tag post, :image %>
                      <% end %>
                    </figure>
                  </div>
                  <div class="card-content">
                    <div class="media">
                      <div class="media-left">
                        <figure class="image is-48x48">
                          <%= attachment_image_tag post.user, :profile_image, fallback: "no-image.png", class: "profile_image" %>
                        </figure>
                      </div>
                      <div class="media-content">
                        <div class="title"><%=link_to post.user.username, user_path(post.user) %></div>
                      </div>
                    </div>

                    <div class="content">
                      <p class="title is-4"><%= post.title %></p>
                    </div>
                    <div class="content">
                      <p class="title is-4">いいね：<%= post.likes.count %></p>
                    </div>
                    <div class="content">
                      <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
        

